{# Form content template #}

<div class="form-group">
    {{ form_label(form.name,null,{ 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
    <div class="col-sm-10">
        {{ form_widget(form.name,{ 'attr': { 'class': 'form-control', 'placeholder': 'post.name.placeholder'|trans({},'SebblaPostBundle') }}) }}
        <div class="error-container">
            {{ form_errors(form.name) }}                    
        </div>
    </div>
</div>
<div class="form-group">
    {{ form_label(form.text,null,{ 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
    <div class="col-sm-10">
        {{ form_widget(form.text,{ 'attr': { 'rows': 10, 'class': 'form-control', 'placeholder': 'post.text.placeholder'|trans({},'SebblaPostBundle') }}) }}
        <div class="error-container">
            {{ form_errors(form.text) }}                    
        </div>
    </div>
</div>
<div class="form-group">
    {{ form_label(form.type,null,{ 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
    <div class="col-sm-10">
        {{ form_widget(form.type,{ 'attr': { 'class': 'form-control' }}) }}
        <div class="error-container">
            {{ form_errors(form.type) }}                    
        </div>
   </div>
</div>
<div class="form-group">
    {{ form_label(form.image,null,{ 'label_attr': { 'class': 'col-sm-2 control-label' }}) }}
    <div class="col-sm-10">
        {{ form_widget(form.image,{ 'attr': { 'class': '' }}) }}
        <div class="error-container">
            {{ form_errors(form.image) }}                    
        </div>
   </div>
</div>            
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 text-right">
        {{ form_widget(form.submit,{ 'attr': { 'class': 'btn btn-default' } }) }}                    
    </div>
</div>