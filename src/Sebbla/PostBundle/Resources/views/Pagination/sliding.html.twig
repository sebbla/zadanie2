{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <div class="col-xs-12 text-center">
        <ul class="pagination">
            {% if first is defined and current != first %}
                <li class="first">
                    <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&laquo;</a>
                </li>
            {% endif %}

            {% if previous is defined %}
                <li class="previous">
                    <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">{{ 'page.previous'|trans({},'SebblaPostBundle') }}</a>
                </li>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <li class="page">
                        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="active"><a href="#">{{ page }} <span class="sr-only">(current)</span></a></li>
                {% endif %}

            {% endfor %}

            {% if next is defined %}
                <li class="next">
                    <a href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{ 'page.next'|trans({},'SebblaPostBundle') }}</a>
                </li>
            {% endif %}

            {% if last is defined and current != last %}
                <li class="last">
                    <a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&raquo;</a>
                </li>
            {% endif %}
        </ul>
    </div>
{% endif %}
